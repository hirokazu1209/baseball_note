<div class="account-page">
  <div class="account-page__inner">
    <h2>新規登録</h2>
    
    <%= form_with model: @user ,url: user_registration_path, local: true do |f| %>
      <%# <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <div class="field-label">
          <%= f.label :name %><br />
        </div>
        <div class="field-input">
          <%= f.text_field :name, placeholder: "名前を入力して下さい" %>
        </div>

        <div class="field-label">
          <%= f.label :nickname %><br />
        </div>
        <div class="field-input">
          <%= f.text_field :nickname, placeholder: "ニックネームを入力して下さい" %>
        </div>

        <div class="field-label">
          <%= f.label :email %><br />
        </div>
        <div class="field-input">
          <%= f.text_field :email, placeholder: "メールアドレスを入力して下さい" %>
        </div>

        <div class="field-label">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>  
        <div class="field-input">
          <%= f.password_field :password, placeholder: "半角英数字6桁以上のパスワードを入力して下さい", autocomplete: "off" %>
        </div>

        <div class="field-label">
          <%= f.label :password_confirmation %><br />
        </div>
        <div class="field-input">
          <%= f.password_field :password_confirmation, placeholder: "半角英数字6桁以上のパスワードを入力して下さい", autocomplete: "off" %>
        </div>

        <div class="field-input">
          <%= f.label :pitching_batting %><br />
          <%= f.text_field :pitching_batting , placeholder: "例：右投右打" %>
        </div>

        <div class="field-label">
          <%= f.label :position %><br />
        </div>
        <div class="field-input">
          <%= f.text_field :position , placeholder: "例：センター" %>
        </div>

        <div class="field-label">
          <%= f.label :profile %><br />
        </div>
        <div class="field-input">
          <%= f.text_area :profile , placeholder: "アピールポイントを入力して下さい"%>
        </div>

        <div class="actions">
          <%= f.submit "登録" %>
        </div>
      </div>  
    <% end %>  
  </div>
</div>
