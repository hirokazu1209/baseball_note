<div class="account-page">
  <div class="account-page__inner">
    <h2>ログイン</h2>

    <%= form_with model: @user, url: user_session_path, local:true do |f| %>
      <div class="field">
        <div class="field-label">
          <%= f.label :email %><br />
        </div>
        <div class="field-input">
          <%= f.email_field :email, placeholder: "メールアドレスを入力して下さい" %>
        </div>

        <div class="field-label">
          <%= f.label :password %><br />
        </div>
        <div class="field-input">
          <%= f.password_field :password, placeholder: "半角英数字6桁以上のパスワードを入力して下さい", autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
