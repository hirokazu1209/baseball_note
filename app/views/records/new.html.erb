<%= form_with model: @record, local: true do |f|%>
  <%= f.label :practice_time, "練習時間" %><br />
  <%= f.text_field :practice_time, id:"#" %><br />

  <%= f.label :ball, "球数" %><br />
  <%= f.text_field :ball, id:"#" %><br />

  <%= f.label :check, "課題" %><br />
  <% ["ヘッドが下がる","頭が突っ込む","手首がこねる","軸足に体重が乗らない"].each do |task| %>
    <%= f.check_box :check, {multiple: true}, task, nil %>
    <%= task %><br />
  <% end %>
  
  <%# <%= f.check_box :check, {multiple: true}, "ヘッドが下がる", nil %>
  <%# <%= f.check_box :check, {multiple: true}, "頭が突っ込む", nil %>
  <%# <%= f.check_box :check, {multiple: true}, "軸足に体重が乗らない", nil %>
  <%# <%= f.check_box :check, {multiple: true}, "その他", nil %>

  
  <%= f.label :content, "詳細" %><br />
  <%= f.text_area :content, id:"#" %><br />

  <%= f.submit "記録" %>
<% end %>